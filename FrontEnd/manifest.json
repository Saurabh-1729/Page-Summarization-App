{
  "manifest_version": 3,
  "name": "Page Summary Extension",
  "version": "1.0",
  "description": "Summarizes the current web page",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon/icon.png"
  }
}

